@model IEnumerable<ProductViewModel>

<div class="row">
    <div class="col-md-8">
        <h2>List of Product</h2>
        <a asp-controller="Products" asp-action="Create" class="btn btn-success">Create New Product</a>
        <hr />
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>List Price</th>
                        <th>Selling Price</th>
                        <th>Discount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Product_Name</td>
                            <td>@product.CategoryName</td>
                            <td>@product.ListPrice</td>
                            <td>@product.SellingPrice</td>
                            <td>@product.Discount</td>
                            <td>
                                <a asp-controller="Products" asp-action="Update" asp-route-id="@product.Id">Edit</a> |
                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id">Delete</a> 
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2>@ViewData["ErrorMessage"]</h2>
        }
    </div>
</div>