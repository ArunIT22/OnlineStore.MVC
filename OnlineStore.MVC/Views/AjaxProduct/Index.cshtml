<h2>List of Product - using AJAX</h2>
<div class="row">
    <div class="col-md-6">
        <a asp-controller="AjaxProduct" asp-action="Create" class="btn btn-success">Add New Product</a>
    </div>
</div>

<table id="tblProducts" class="table table-hover">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Selling Price</th>
            <th>List Price</th>
            <th>Discount</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section Scripts{
    <link href="~/css/datatables.min.css" rel="stylesheet" />
    <script src="~/datatables.net/jquery.datatables.js"></script>
    <script src="~/js/product.js"></script>
    <script>
        $(document).ready(function () {
            getProductList();
        });
    </script>
}